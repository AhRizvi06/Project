<% layout('/layouts/boilerplate.ejs') -%>

    <body>
        <div class="row">
            <div class="col-8 offset-2 ">
                <h3>Edit Listing</h3>
                <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" enctype="multipart/form-data">
                    <div class="mb-2">
                        <label for="title" class="form-label">Enter title</label>
                        <textarea name="listing[title]" id="" class="form-control"><%= listing.title %></textarea>
                    </div>
                    <div class="mb-2">
                        <label for="description" class="form-label">Enter Description</label>
                        <textarea name="listing[description]" id=""
                            class="form-control"><%= listing.description %></textarea>
                    </div>
                    <div class="mb-2">
                       <img src="<%= originalImageUrl %>" />
                    </div>
                    <div class="mb-2">
                        <label for="image" class="form-label">Upload new image</label>
                        <input name="listing[image]" id="" class="form-control" type="file" >
                    </div>
                    <div class="mb-2">
                        <label for="price" class="form-label">Enter Price</label>
                        <textarea name="listing[price]" id="" class="form-control"><%= listing.price %></textarea>
                    </div>
                    <div class="row">
                    <div class="mb-2 col-md-8">
                        <label for="location" class="form-label">Enter Location</label>
                        <textarea name="listing[location]" id="" class="form-control"><%= listing.location %></textarea>
                    </div>
                    <div class="mb-2 col-md-4">
                        <label for="country" class="form-label">Enter Country</label>
                        <textarea name="listing[country]" id="" class="form-control"><%= listing.country %></textarea>
                    </div>
                    </div>
                    <button class="btn btn-dark edit-btn mb-2 mt-2">Edit</button>
                </form>
            </div>
        </div>
    </body>